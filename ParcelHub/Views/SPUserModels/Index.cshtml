@model IEnumerable<ApplicationUser>
@inject ParcelHub.ServiceRepository.IUserSerivce _userService
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SPLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Warehouse ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsValidUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            if (item.Id == _userService.GetUserId())
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SPWarehouseModelIdIfUserIsAdmin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsValidUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                </tr>
            }
            else

            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SPWarehouseModelIdIfUserIsAdmin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsValidUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }


        }
    </tbody>
</table>
