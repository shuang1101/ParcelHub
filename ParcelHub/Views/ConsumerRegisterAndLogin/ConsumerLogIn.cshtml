@model ParcelHub.Models.LoginUser

@{
    Layout = null;
}

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Kiwi parcel">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>Login Page </title>

    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="css/elegant-icons-style.css" rel="stylesheet" />
    <link href="css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="css/style.css" rel="stylesheet">
    <link href="css/style-responsive.css" rel="stylesheet" />

</head>

<body class="login-img3-body">

    <div class="container">

        <form asp-action="ConsumerLogIn" class="login-form">
            
            <div class="login-wrap">
                <p class="login-img"><i class="icon_lock_alt"></i></p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_profile"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Username" type="text" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>

                <label class="checkbox">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe"> Remember me
                    <span class="pull-right"> <a href="#"> Need help?</a></span>
                </label>

                <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                <br />
                <p>Don't have an account? <a asp-controller="ConsumerRegisterAndLogin" asp-action="ConsumerSignUpByEmail">Create account</a></p> 
               

            </div>
        </form>
        <div class="text-right">
            <div class="credits">
                
            </div>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>

</html>
