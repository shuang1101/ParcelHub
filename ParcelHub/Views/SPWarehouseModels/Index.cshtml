@model IEnumerable<ParcelHub.Models.SPWarehouseModel>
@inject ParcelHub.DatabaseConnection.ApplicationDbContext _context
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SPLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelIsvalid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryOfWarehouseModelCountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostCode)
            </th>
            <th>
                Service Coverage
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ReceiverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LandService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OceanFreightService)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelIsvalid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryOfWarehouseModelCountryName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostCode)
                </td>
                <td>
                    @{
                        var regionsList = _context.RegionList.Where(r => r.SPWarehouseModelId == item.Id).ToList();
                        if (regionsList.Count == 0)
                        {
                            <p>No Service region has been asigned to this Warehouse</p>
                        }
                        else
                        {
                            var regions = _context.Region.ToList();

                            foreach (var rList in regionsList)
                            {

                                <p>@regions.Find(r => r.Id == rList.regionId).RegionName</p>
                            }
                        }

                    }

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ReceiverName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AirService)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LandService)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OceanFreightService)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
